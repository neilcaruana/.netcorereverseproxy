@code {
    // Tab state
    private string _activeTab = "statistics";

    // Realtime state
    private HubConnection? _hubConnection;
    private bool _hubConnected;
    private readonly List<LogEvent> _liveEvents = new();
    private bool _autoScroll = true;
    private bool _terminalView;
    private const int MaxLiveEvents = 500;

    // Stats data
    private ConnectionStats? _connectionStats;
    private long? _uniqueIPs;
    private long? _uniquePorts;
    private long? _blacklistedIPs;

    // Paged connections
    private PagedResult<Connection>? _pagedConnections;
    private int _currentPage = 1;
    private const int PageSize = 25;
    private ConnectionFilter _filter = new();

    // Connection data for expanded rows
    private Dictionary<string, List<ConnectionData>?> _expandedSessions = new();
    private string? _loadingSessionId;

    // IP details popover
    private IPDetails? _selectedIPDetails;
    private string? _selectedIP;
    private long? _selectedRowId;
    private bool _isLoadingIPDetails;

    // Loading state
    private bool _isLoading = true;
    private bool _isLoadingConnections = true;
    private bool _isExpandingAll = false;
    private bool _hasInitialized = false;

    // Date range
    private DateTime _fromDate = DateTime.Today;
    private DateTime _toDate = DateTime.Today.AddDays(1).AddSeconds(-1);

    private string? _error;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            _hasInitialized = true;
            _ = LoadAllDataAsync();
            _ = StartHubConnectionAsync();
        }
    }

    private async Task StartHubConnectionAsync()
    {
        try
        {
            _hubConnection = new HubConnectionBuilder()
                .WithUrl(Navigation.ToAbsoluteUri("/hubs/proxy-events"))
                .WithAutomaticReconnect()
                .Build();

            _hubConnection.On<LogEvent>("ReceiveLogEvent", async (logEvent) =>
            {
                _liveEvents.Insert(0, logEvent);
                if (_liveEvents.Count > MaxLiveEvents)
                    _liveEvents.RemoveAt(_liveEvents.Count - 1);

                if (_autoScroll)
                    await InvokeAsync(StateHasChanged);
            });

            _hubConnection.Reconnected += _ =>
            {
                _hubConnected = true;
                return InvokeAsync(StateHasChanged);
            };

            _hubConnection.Closed += _ =>
            {
                _hubConnected = false;
                return InvokeAsync(StateHasChanged);
            };

            await _hubConnection.StartAsync();
            _hubConnected = true;
            await InvokeAsync(StateHasChanged);
        }
        catch
        {
            _hubConnected = false;
        }
    }

    private async Task LoadAllDataAsync()
    {
        var totalStopwatch = Stopwatch.StartNew();
        await LogToConsoleAsync("‚è±Ô∏è Starting dashboard data load...");

        _error = null;
        _connectionStats = null;
        _uniqueIPs = null;
        _uniquePorts = null;
        _blacklistedIPs = null;
        _isLoading = true;
        _isLoadingConnections = true;
        _currentPage = 1;
        _expandedSessions.Clear();
        _filter = new();

        await InvokeAsync(StateHasChanged);

        // Load all stats in parallel
        var tasks = new List<Task>
        {
            LoadWithTimingAsync("ConnectionStats", async () =>
            {
                _connectionStats = await DashboardService.GetConnectionStatsAsync(_fromDate, _toDate);
                await InvokeAsync(StateHasChanged);
            }),
            LoadWithTimingAsync("UniqueIPs", async () =>
            {
                _uniqueIPs = await DashboardService.GetUniqueIPsCountAsync(_fromDate, _toDate);
                await InvokeAsync(StateHasChanged);
            }),
            LoadWithTimingAsync("UniquePorts", async () =>
            {
                _uniquePorts = await DashboardService.GetUniquePortsCountAsync(_fromDate, _toDate);
                await InvokeAsync(StateHasChanged);
            }),
            LoadWithTimingAsync("BlacklistedIPs", async () =>
            {
                _blacklistedIPs = await DashboardService.GetBlacklistedIPsCountAsync(_fromDate, _toDate);
                await InvokeAsync(StateHasChanged);
            }),
            LoadWithTimingAsync("Connections", async () =>
            {
                _pagedConnections = await DashboardService.GetConnectionsPagedAsync(_fromDate, _toDate, _currentPage, PageSize, _filter);
                _isLoadingConnections = false;
                await InvokeAsync(StateHasChanged);
            })
        };

        await Task.WhenAll(tasks);

        _isLoading = false;
        totalStopwatch.Stop();
        await LogToConsoleAsync($"‚úÖ Dashboard fully loaded in {totalStopwatch.ElapsedMilliseconds}ms");
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadWithTimingAsync(string name, Func<Task> action)
    {
        var sw = Stopwatch.StartNew();
        try
        {
            await action();
            await LogToConsoleAsync($"üìä {name} loaded in {sw.ElapsedMilliseconds}ms");
        }
        catch (Exception ex)
        {
            _error ??= ex.Message;
            await LogToConsoleAsync($"‚ùå {name} failed: {ex.Message}", true);
        }
    }

    private async Task LoadConnectionsPageAsync()
    {
        var sw = Stopwatch.StartNew();
        _isLoadingConnections = true;

        // Force immediate UI update to show loading state
        StateHasChanged();
        await Task.Yield();

        try
        {
            _pagedConnections = await DashboardService.GetConnectionsPagedAsync(_fromDate, _toDate, _currentPage, PageSize, _filter);
            await LogToConsoleAsync($"üìã Connections page {_currentPage} loaded in {sw.ElapsedMilliseconds}ms ({_pagedConnections.Items.Count} of {_pagedConnections.TotalCount} records)");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            await LogToConsoleAsync($"‚ùå Connections failed: {ex.Message}", true);
        }
        finally
        {
            _isLoadingConnections = false;
            StateHasChanged();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page < 1 || (_pagedConnections != null && page > _pagedConnections.TotalPages)) return;
        if (_isLoadingConnections) return; // Prevent double-clicks

        _currentPage = page;
        _expandedSessions.Clear();
        await LoadConnectionsPageAsync();
    }

    private async Task SetQuickRange(int days)
    {
        _fromDate = DateTime.Today.AddDays(-days + 1);
        _toDate = DateTime.Today.AddDays(1).AddSeconds(-1);
        await LoadAllDataAsync();
    }

    private async Task SetThisYear()
    {
        _fromDate = new DateTime(DateTime.Today.Year, 1, 1);
        _toDate = DateTime.Today.AddDays(1).AddSeconds(-1);
        await LoadAllDataAsync();
    }

    private async Task SetLastYear()
    {
        _fromDate = new DateTime(DateTime.Today.Year - 1, 1, 1);
        _toDate = new DateTime(DateTime.Today.Year - 1, 12, 31, 23, 59, 59);
        await LoadAllDataAsync();
    }

    private async Task ApplyFilter(Action<ConnectionFilter> update)
    {
        update(_filter);
        _currentPage = 1;
        _expandedSessions.Clear();
        await LoadConnectionsPageAsync();
    }

    private async Task ClearFilters()
    {
        _filter = new();
        _currentPage = 1;
        _expandedSessions.Clear();
        await LoadConnectionsPageAsync();
    }

    private async Task ToggleRowExpand(string? sessionId)
    {
        if (string.IsNullOrEmpty(sessionId)) return;

        if (_expandedSessions.ContainsKey(sessionId))
        {
            _expandedSessions.Remove(sessionId);
            return;
        }

        _loadingSessionId = sessionId;
        _expandedSessions[sessionId] = null;
        StateHasChanged();

        var sw = Stopwatch.StartNew();
        try
        {
            var data = await DashboardService.GetConnectionDataAsync(sessionId);
            _expandedSessions[sessionId] = data;
            await LogToConsoleAsync($"üì¶ ConnectionData loaded in {sw.ElapsedMilliseconds}ms (Session: {sessionId[..8]}..., Records: {data?.Count ?? 0})");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
            _expandedSessions.Remove(sessionId);
            await LogToConsoleAsync($"‚ùå ConnectionData failed: {ex.Message}", true);
        }
        finally
        {
            _loadingSessionId = null;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task ExpandAll()
    {
        if (_pagedConnections == null) return;
        _isExpandingAll = true;
        StateHasChanged();
        await Task.Yield();

        try
        {
            var sessionsToExpand = _pagedConnections.SessionsWithData
                .Where(s => !_expandedSessions.ContainsKey(s))
                .ToList();

            foreach (var sessionId in sessionsToExpand)
            {
                try
                {
                    var data = await DashboardService.GetConnectionDataAsync(sessionId);
                    _expandedSessions[sessionId] = data;
                }
                catch (Exception ex)
                {
                    await LogToConsoleAsync($"‚ùå ExpandAll failed for {sessionId[..8]}: {ex.Message}", true);
                }
            }
        }
        finally
        {
            _isExpandingAll = false;
            StateHasChanged();
        }
    }

    private void CollapseAll()
    {
        _expandedSessions.Clear();
    }

    private async Task ShowIPDetailsAsync(string ipAddress, long rowId)
    {
        if (_selectedIP == ipAddress && _selectedRowId == rowId)
        {
            _selectedIP = null;
            _selectedRowId = null;
            _selectedIPDetails = null;
            return;
        }

        _selectedIP = ipAddress;
        _selectedRowId = rowId;
        _selectedIPDetails = null;
        _isLoadingIPDetails = true;
        StateHasChanged();

        try
        {
            _selectedIPDetails = await DashboardService.GetIPDetailsAsync(ipAddress);
        }
        catch
        {
            _selectedIPDetails = new IPDetails { IPAddress = ipAddress };
        }
        finally
        {
            _isLoadingIPDetails = false;
            StateHasChanged();
        }
    }

    private void CloseIPDetails()
    {
        _selectedIP = null;
        _selectedRowId = null;
        _selectedIPDetails = null;
    }

    private static string GetAbuseConfidenceBadgeClass(long confidence) => confidence switch
    {
        >= 75 => "bg-danger",
        >= 50 => "bg-warning text-dark",
        >= 25 => "bg-info text-dark",
        _ => "bg-success"
    };

    private IEnumerable<int> GetPageNumbers()
    {
        if (_pagedConnections == null) yield break;

        int start = Math.Max(1, _currentPage - 2);
        int end = Math.Min(_pagedConnections.TotalPages, _currentPage + 2);

        for (int i = start; i <= end; i++)
            yield return i;
    }

    private static string FormatNumber(long number) => number switch
    {
        >= 1_000_000 => $"{number / 1_000_000.0:F1}M",
        >= 1_000 => $"{number / 1_000.0:F1}K",
        _ => number.ToString("N0")
    };

    private async Task LogToConsoleAsync(string message, bool isError = false)
    {
        try
        {
            var jsMethod = isError ? "console.error" : "console.log";
            var timestamp = DateTime.Now.ToString("HH:mm:ss.fff");
            await JS.InvokeVoidAsync("eval", $"{jsMethod}('[{timestamp}] {message.Replace("'", "\\'")}')");
        }
        catch
        {
            // Ignore JS interop errors during prerendering
        }
    }

    // Realtime helpers
    private void ClearLiveEvents() => _liveEvents.Clear();

    private static string GetLogLevelBadgeClass(Kavalan.Logging.LogLevel level) => level switch
    {
        Kavalan.Logging.LogLevel.Error => "bg-danger",
        Kavalan.Logging.LogLevel.Warning => "bg-warning text-dark",
        Kavalan.Logging.LogLevel.Info => "bg-info text-dark",
        Kavalan.Logging.LogLevel.Request => "bg-primary",
        Kavalan.Logging.LogLevel.Debug => "bg-secondary",
        _ => "bg-light text-dark"
    };

    private static string GetLogLevelRowClass(Kavalan.Logging.LogLevel level) => level switch
    {
        Kavalan.Logging.LogLevel.Error => "table-danger",
        Kavalan.Logging.LogLevel.Warning => "table-warning",
        _ => ""
    };

    private static string GetTerminalLevelColor(Kavalan.Logging.LogLevel level) => level switch
    {
        Kavalan.Logging.LogLevel.Error => "#f48771",
        Kavalan.Logging.LogLevel.Warning => "#cca700",
        Kavalan.Logging.LogLevel.Info => "#d4d4d4",
        Kavalan.Logging.LogLevel.Request => "#4ec9b0",
        Kavalan.Logging.LogLevel.Debug => "#808080",
        _ => "#d4d4d4"
    };

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
    private void TogglePauseAutoScroll()
    {
        _autoScroll = !_autoScroll;
        if (_autoScroll)
            StateHasChanged();
    }
