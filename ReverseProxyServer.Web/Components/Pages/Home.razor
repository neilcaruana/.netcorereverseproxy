@page "/"
@using ReverseProxyServer.Web.Services
@using ReverseProxyServer.Data.DTO
@using Kavalan.Logging
@using Microsoft.AspNetCore.SignalR.Client
@using System.Diagnostics
@inject IDashboardDataService DashboardService
@inject IJSRuntime JS
@inject NavigationManager Navigation
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Dashboard - Reverse Proxy Server</PageTitle>

<!-- Header with Date Range -->
<div class="dashboard-header mb-2">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div>
            <h1 class="h5 mb-0 fw-bold">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </h1>
            <p class="text-muted mb-0 small d-none d-md-block">Monitor your reverse proxy connections in real-time</p>
        </div>
        <div class="date-range-picker">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white"><i class="bi bi-calendar3"></i></span>
                <input type="date" class="form-control" @bind="_fromDate" />
                <span class="input-group-text bg-white">to</span>
                <input type="date" class="form-control" @bind="_toDate" />
                <button class="btn btn-primary" @onclick="LoadAllDataAsync" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    else
                    {
                        <i class="bi bi-arrow-clockwise"></i>
                    }
                </button>
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" disabled="@_isLoading">
                    Quick
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(1)" @onclick:preventDefault>Today</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(7)" @onclick:preventDefault>Last 7 days</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(30)" @onclick:preventDefault>Last 30 days</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(90)" @onclick:preventDefault>Last 90 days</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(365)" @onclick:preventDefault>Last year</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <button class="nav-link @(_activeTab == "statistics" ? "active" : "")" @onclick='() => _activeTab = "statistics"'>
            <i class="bi bi-bar-chart me-1"></i>Statistics
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeTab == "realtime" ? "active" : "")" @onclick='() => _activeTab = "realtime"'>
            <i class="bi bi-broadcast me-1"></i>Realtime
        </button>
    </li>
</ul>

@if (_error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@_error
        <button type="button" class="btn-close" @onclick="() => _error = null"></button>
    </div>
}

@if (_activeTab == "statistics")
{
<!-- Stats Cards -->
<div class="row g-2 mb-2">
    <!-- Total Connections Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-primary">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-plug"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Total Connections</h6>
                    @if (_connectionStats == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                        <div class="stat-subtitle">Loading...</div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_connectionStats.TotalConnections)</div>
                        <div class="stat-subtitle">
                            <span class="text-success fw-semibold">@FormatNumber(_connectionStats.ForwardConnections)</span> Forward ¬∑ 
                            <span class="text-warning fw-semibold">@FormatNumber(_connectionStats.HoneypotConnections)</span> HoneyPot
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Unique IPs Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-info">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-globe"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Unique IPs</h6>
                    @if (_uniqueIPs == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_uniqueIPs.Value)</div>
                    }
                    <div class="stat-subtitle">Distinct source addresses</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Unique Ports Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-secondary">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-diagram-3"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Unique Ports</h6>
                    @if (_uniquePorts == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_uniquePorts.Value)</div>
                    }
                    <div class="stat-subtitle">Target ports accessed</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Blacklisted IPs Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-danger">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-shield-x"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Blacklisted IPs</h6>
                    @if (_blacklistedIPs == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_blacklistedIPs.Value)</div>
                    }
                    <div class="stat-subtitle">Blocked addresses</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Connections Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white py-2">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-list-ul me-2"></i>Connection Log
            </h6>
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">
                    @if (_pagedConnections != null)
                    {
                        <span>@_pagedConnections.TotalCount.ToString("N0") total records</span>
                    }
                </span>
                @if (_pagedConnections?.SessionsWithData.Count > 0)
                {
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary" @onclick="ExpandAll" disabled="@_isExpandingAll" title="Expand all">
                            @if (_isExpandingAll)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            else
                            {
                                <i class="bi bi-arrows-expand"></i>
                            }
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="CollapseAll" title="Collapse all">
                            <i class="bi bi-arrows-collapse"></i>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-0 position-relative">
        @if (_isLoadingConnections && _pagedConnections != null)
        {
            <!-- Loading overlay for page changes -->
            <div class="loading-overlay">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        @if (_isLoadingConnections && _pagedConnections == null)
        {
            <div class="d-flex justify-content-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (_pagedConnections?.Items.Any() == true)
        {
            <div class="table-responsive @(_isLoadingConnections ? "opacity-50" : "")" style="transition: opacity 0.2s ease;">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 30px;"></th>
                            <th>Time</th>
                            <th>Session</th>
                            <th>Type</th>
                            <th>Remote IP</th>
                            <th>Port</th>
                            <th style="width: 30px;"></th>
                            <th>Local Address</th>
                            <th>Port</th>
                        </tr>
                        <tr class="filter-row">
                            <td>
                                @if (_filter.HasAnyFilter)
                                {
                                    <button class="btn btn-link btn-sm p-0 text-danger" @onclick="ClearFilters" title="Clear all filters">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                }
                            </td>
                            <td></td>
                            <td></td>
                            <td>
                                <select class="form-select form-select-sm filter-input" value="@_filter.ProxyType" @onchange="e => ApplyFilter(f => f.ProxyType = e.Value?.ToString())">
                                    <option value="">All</option>
                                    <option value="Forward">Forward</option>
                                    <option value="HoneyPot">Honeypot</option>
                                </select>
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.RemoteAddress" @onchange="e => ApplyFilter(f => f.RemoteAddress = e.Value?.ToString())" />
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.RemotePort" @onchange="e => ApplyFilter(f => f.RemotePort = e.Value?.ToString())" />
                            </td>
                            <td></td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.LocalAddress" @onchange="e => ApplyFilter(f => f.LocalAddress = e.Value?.ToString())" />
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.LocalPort" @onchange="e => ApplyFilter(f => f.LocalPort = e.Value?.ToString())" />
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var conn in _pagedConnections.Items)
                        {
                            var isExpanded = _expandedSessions.ContainsKey(conn.SessionId);
                            var hasData = _pagedConnections.SessionsWithData.Contains(conn.SessionId);
                            <tr class="@(isExpanded ? "table-active" : "")" @onclick="() => ToggleRowExpand(conn.SessionId)" style="cursor: pointer;">
                                <td class="text-center">
                                    @if (_loadingSessionId == conn.SessionId)
                                    {
                                        <span class="spinner-border spinner-border-sm text-primary"></span>
                                    }
                                    else if (hasData)
                                    {
                                        <i class="bi @(isExpanded ? "bi-chevron-down" : "bi-chevron-right") text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-dash text-muted"></i>
                                    }
                                </td>
                                <td>
                                    <span class="fw-medium">@conn.ConnectionTime.ToString("MMM dd")</span>
                                    <span class="text-muted">@conn.ConnectionTime.ToString("HH:mm:ss")</span>
                                </td>
                                <td><code class="text-muted" style="font-size: 0.7rem;">@conn.SessionId?[..8]</code></td>
                                <td>
                                    @if (conn.ProxyType == "HoneyPot")
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-bullseye me-1"></i>Honeypot</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="bi bi-arrow-right me-1"></i>Forward</span>
                                    }
                                </td>
                                <td><code class="text-primary">@conn.RemoteAddress</code></td>
                                <td><code>@conn.RemotePort</code></td>
                                <td class="text-center text-muted"><i class="bi bi-arrow-right"></i></td>
                                <td><code>@conn.LocalAddress</code></td>
                                <td><code>@conn.LocalPort</code></td>
                            </tr>
                            @if (isExpanded)
                            {
                                var sessionData = _expandedSessions[conn.SessionId];
                                <tr>
                                    <td colspan="9" class="bg-light p-0">
                                        <div class="p-2">
                                            @if (sessionData?.Any() == true)
                                            {
                                                @foreach (var data in sessionData)
                                                {
                                                    <div class="connection-data-record mb-2">
                                                        <div class="d-flex align-items-center mb-1">
                                                            @if (data.CommunicationDirection == "Incoming")
                                                            {
                                                                <span class="badge bg-info me-2"><i class="bi bi-arrow-down-left me-1"></i>Incoming</span>
                                                                <small class="text-muted">Remote ‚Üí Local</small>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-success me-2"><i class="bi bi-arrow-up-right me-1"></i>Outgoing</span>
                                                                <small class="text-muted">Local ‚Üí Remote</small>
                                                            }
                                                        </div>
                                                        <pre class="bg-dark text-light p-2 rounded mb-0" style="max-height: 120px; overflow: auto; font-size: 0.75rem;">@data.Data</pre>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <p class="text-muted mb-0 small"><i class="bi bi-inbox me-2"></i>No data recorded for this connection</p>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (_pagedConnections.TotalPages > 1)
            {
                <div class="card-footer bg-white">
                    <nav class="d-flex justify-content-between align-items-center">
                        <span class="text-muted small">
                            Page @_pagedConnections.Page of @_pagedConnections.TotalPages
                        </span>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(!_pagedConnections.HasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(1)" disabled="@(!_pagedConnections.HasPreviousPage)">
                                    <i class="bi bi-chevron-double-left"></i>
                                </button>
                            </li>
                            <li class="page-item @(!_pagedConnections.HasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(!_pagedConnections.HasPreviousPage)">
                                    <i class="bi bi-chevron-left"></i>
                                </button>
                            </li>
                            @foreach (var pageNum in GetPageNumbers())
                            {
                                <li class="page-item @(pageNum == _currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(!_pagedConnections.HasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(!_pagedConnections.HasNextPage)">
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            </li>
                            <li class="page-item @(!_pagedConnections.HasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(_pagedConnections.TotalPages)" disabled="@(!_pagedConnections.HasNextPage)">
                                    <i class="bi bi-chevron-double-right"></i>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox display-4"></i>
                <p class="mt-3 mb-0">No connections found in the selected date range</p>
            </div>
        }
    </div>
</div>
} <!-- end statistics tab -->

@if (_activeTab == "realtime")
{
<div class="card shadow-sm">
    <div class="card-header bg-white py-2">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-broadcast me-2"></i>Realtime Event Feed
                @if (_hubConnected)
                {
                    <span class="badge bg-success ms-2" style="font-size: 0.6rem;">CONNECTED</span>
