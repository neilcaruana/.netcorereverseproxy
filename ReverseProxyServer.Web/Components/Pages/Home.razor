@page "/"
@using ReverseProxyServer.Web.Services
@using ReverseProxyServer.Data.DTO
@using Kavalan.Logging
@using Microsoft.AspNetCore.SignalR.Client
@using Microsoft.Extensions.Options
@using System.Diagnostics
@inject IDashboardDataService DashboardService
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject IOptions<DatabaseSettings> DatabaseSettings
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Dashboard - Reverse Proxy Server</PageTitle>

<!-- Header with Date Range -->
<div class="dashboard-header mb-1">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div>
            <h1 class="h5 mb-0 fw-bold">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </h1>
            <p class="text-muted mb-0 small d-none d-md-block">Monitor your reverse proxy connections in real-time</p>
        </div>
        <div class="date-range-picker">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white"><i class="bi bi-calendar3"></i></span>
                <span class="input-group-text bg-white text-muted" style="font-size:0.7rem;">From</span>
                <input type="datetime-local" class="form-control" @bind="_fromDate" @bind:format="yyyy-MM-ddTHH:mm:ss" step="1" />
                <span class="input-group-text bg-white text-muted" style="font-size:0.7rem;">To</span>
                <input type="datetime-local" class="form-control" @bind="_toDate" @bind:format="yyyy-MM-ddTHH:mm:ss" step="1" />
                <button class="btn btn-primary" @onclick="LoadAllDataAsync" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    else
                    {
                        <i class="bi bi-arrow-clockwise"></i>
                    }
                </button>
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" disabled="@_isLoading">
                    Quick
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(1)" @onclick:preventDefault>Today</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(7)" @onclick:preventDefault>Last 7 days</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(30)" @onclick:preventDefault>Last 30 days</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="() => SetQuickRange(90)" @onclick:preventDefault>Last 90 days</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#" @onclick="SetThisYear" @onclick:preventDefault>This year</a></li>
                    <li><a class="dropdown-item" href="#" @onclick="SetLastYear" @onclick:preventDefault>Last year</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs mb-2">
    <li class="nav-item">
        <button class="nav-link @(_activeTab == "statistics" ? "active" : "")" @onclick='() => _activeTab = "statistics"'>
            <i class="bi bi-bar-chart me-1"></i>Statistics
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeTab == "realtime" ? "active" : "")" @onclick='() => _activeTab = "realtime"'>
            <i class="bi bi-broadcast me-1"></i>Realtime
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeTab == "worldview" ? "active" : "")" @onclick="ActivateWorldViewAsync">
            <i class="bi bi-globe-americas me-1"></i>World View
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link @(_activeTab == "about" ? "active" : "")" @onclick='() => _activeTab = "about"'>
            <i class="bi bi-info-circle me-1"></i>About
        </button>
    </li>
</ul>

@if (_error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@_error
        <button type="button" class="btn-close" @onclick="() => _error = null"></button>
    </div>
}

@if (_activeTab == "statistics")
{
<!-- Stats Cards -->
<div class="row g-2 mb-1">
    <!-- Total Connections Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-primary">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-plug"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Total Connections</h6>
                    @if (_connectionStats == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                        <div class="stat-subtitle">Loading...</div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_connectionStats.TotalConnections)</div>
                        <div class="stat-subtitle">
                            <span class="text-success fw-semibold">@FormatNumber(_connectionStats.ForwardConnections)</span> Forward ¬∑ 
                            <span class="text-warning fw-semibold">@FormatNumber(_connectionStats.HoneypotConnections)</span> HoneyPot
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Source Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-info">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-globe"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Source</h6>
                    @if (_uniqueIPs == null || _uniquePorts == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                        <div class="stat-subtitle">Loading...</div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_uniqueIPs.Value)</div>
                        <div class="stat-subtitle">
                            Distinct IPs ¬∑ <span class="fw-semibold">@FormatNumber(_uniquePorts.Value)</span> Distinct Ports
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Blacklisted Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-danger">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-shield-x"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Blacklisted</h6>
                    @if (_blacklistedIPs == null || _uniqueIPs == null)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                        <div class="stat-subtitle">Loading...</div>
                    }
                    else
                    {
                        <div class="stat-value">@FormatNumber(_blacklistedIPs.Value)</div>
                        <div class="stat-subtitle">
                            @if (_uniqueIPs.Value > 0)
                            {
                                @($"{(double)_blacklistedIPs.Value / _uniqueIPs.Value:P1} of unique IPs")
                            }
                            else
                            {
                                @("Blocked addresses")
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Connection Card -->
    <div class="col-12 col-md-6 col-xl-3">
        <div class="stat-card stat-card-secondary">
            <div class="stat-card-body">
                <div class="stat-icon">
                    <i class="bi bi-trophy"></i>
                </div>
                <div class="stat-content">
                    <h6 class="stat-label">Top Connection</h6>
                    @if (_topConnection == null && _isLoading)
                    {
                        <div class="stat-value"><span class="spinner-border spinner-border-sm"></span></div>
                        <div class="stat-subtitle">Loading...</div>
                    }
                    else if (_topConnection != null)
                    {
                        <div class="stat-value" style="font-size: 0.95rem;">@_topConnection.IPAddress</div>
                        <div class="stat-subtitle">
                            <span class="fw-semibold">@FormatNumber(_topConnection.Hits)</span> hits
                            @if (!string.IsNullOrEmpty(_topConnection.CountryCode))
                            {
                                @(" ¬∑ ")
                                <img src="https://flagcdn.com/w20/@(_topConnection.CountryCode.ToLowerInvariant()).png"
                                     width="14" height="10" alt="@_topConnection.CountryCode" loading="lazy" class="me-1" />
                                @_topConnection.CountryName
                            }
                        </div>
                    }
                    else
                    {
                        <div class="stat-value">‚Äî</div>
                        <div class="stat-subtitle">No connections</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Connections Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white py-2">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-list-ul me-2"></i>Connection Log
            </h6>
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">
                    @if (_pagedConnections != null)
                    {
                        <span>@_pagedConnections.TotalCount.ToString("N0") total records</span>
                    }
                </span>
                @if (_pagedConnections?.TotalPages > 1)
                {
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(!_pagedConnections.HasPreviousPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(1)" disabled="@(!_pagedConnections.HasPreviousPage)">
                                <i class="bi bi-chevron-double-left"></i>
                            </button>
                        </li>
                        <li class="page-item @(!_pagedConnections.HasPreviousPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(_currentPage - 1)" disabled="@(!_pagedConnections.HasPreviousPage)">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                        </li>
                        @foreach (var pageNum in GetPageNumbers())
                        {
                            <li class="page-item @(pageNum == _currentPage ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                            </li>
                        }
                        <li class="page-item @(!_pagedConnections.HasNextPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(_currentPage + 1)" disabled="@(!_pagedConnections.HasNextPage)">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </li>
                        <li class="page-item @(!_pagedConnections.HasNextPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(_pagedConnections.TotalPages)" disabled="@(!_pagedConnections.HasNextPage)">
                                <i class="bi bi-chevron-double-right"></i>
                            </button>
                        </li>
                    </ul>
                }
                @if (_pagedConnections?.SessionsWithData.Count > 0)
                {
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary" @onclick="ExpandAll" disabled="@_isExpandingAll" title="Expand all">
                            @if (_isExpandingAll)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            else
                            {
                                <i class="bi bi-arrows-expand"></i>
                            }
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="CollapseAll" title="Collapse all">
                            <i class="bi bi-arrows-collapse"></i>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-0 position-relative">
        @if (_isLoadingConnections && _pagedConnections != null)
        {
            <!-- Loading overlay for page changes -->
            <div class="loading-overlay">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        @if (_isLoadingConnections && _pagedConnections == null)
        {
            <div class="d-flex justify-content-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (_pagedConnections?.Items.Any() == true)
        {
            <div class="table-responsive @(_isLoadingConnections ? "opacity-50" : "")" style="transition: opacity 0.2s ease;">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 30px;"></th>
                            <th>Time</th>
                            <th>Session</th>
                            <th>Type</th>
                            <th>Remote IP</th>
                            <th style="min-width: 90px; width: 90px;">Status</th>
                            <th style="width: 70px;">Country</th>
                            <th>Port</th>
                            <th style="width: 30px;"></th>
                            <th>Local Address</th>
                            <th>Port</th>
                        </tr>
                        <tr class="filter-row">
                            <td>
                                @if (_filter.HasAnyFilter)
                                {
                                    <button class="btn btn-link btn-sm p-0 text-danger" @onclick="ClearFilters" title="Clear all filters">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                }
                            </td>
                            <td></td>
                            <td></td>
                            <td>
                                <select class="form-select form-select-sm filter-input" value="@_filter.ProxyType" @onchange="e => ApplyFilter(f => f.ProxyType = e.Value?.ToString())">
                                    <option value="">All</option>
                                    <option value="Forward">Forward</option>
                                    <option value="HoneyPot">Honeypot</option>
                                </select>
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.RemoteAddress" @onchange="e => ApplyFilter(f => f.RemoteAddress = e.Value?.ToString())" />
                            </td>
                            <td style="min-width: 90px;">
                                <select class="form-select form-select-sm filter-input" value="@_filter.IsBlacklisted" @onchange="e => ApplyFilter(f => f.IsBlacklisted = e.Value?.ToString())">
                                    <option value="">All</option>
                                    <option value="Yes">Blocked</option>
                                    <option value="No">Clean</option>
                                </select>
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.CountryCode" @onchange="e => ApplyFilter(f => f.CountryCode = e.Value?.ToString())" />
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.RemotePort" @onchange="e => ApplyFilter(f => f.RemotePort = e.Value?.ToString())" />
                            </td>
                            <td></td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.LocalAddress" @onchange="e => ApplyFilter(f => f.LocalAddress = e.Value?.ToString())" />
                            </td>
                            <td>
                                <input type="text" class="form-control form-control-sm filter-input" placeholder="Filter..." 
                                       value="@_filter.LocalPort" @onchange="e => ApplyFilter(f => f.LocalPort = e.Value?.ToString())" />
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var rowIndex = 0; }
                        @foreach (var conn in _pagedConnections.Items)
                        {
                            var isExpanded = _expandedSessions.ContainsKey(conn.SessionId);
                            var hasData = _pagedConnections.SessionsWithData.Contains(conn.SessionId);
                            var popoverDirection = rowIndex >= _pagedConnections.Items.Count - 3 ? "popover-above" : "popover-below";
                            rowIndex++;
                            <tr class="@(isExpanded ? "table-active" : "")" @onclick="() => ToggleRowExpand(conn.SessionId)" style="cursor: pointer;">
                                <td class="text-center">
                                    @if (_loadingSessionId == conn.SessionId)
                                    {
                                        <span class="spinner-border spinner-border-sm text-primary"></span>
                                    }
                                    else if (hasData)
                                    {
                                        <span class="badge @(isExpanded ? "bg-primary" : "bg-primary-subtle text-primary border border-primary-subtle")" style="font-size:0.6rem;">
                                            <i class="bi @(isExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-dash text-muted"></i>
                                    }
                                </td>
                                <td>
                                    <span class="fw-medium">@conn.ConnectionTime.ToString("MMM dd")</span>
                                    <span class="text-muted">@conn.ConnectionTime.ToString("HH:mm:ss")</span>
                                </td>
                                <td><code class="text-muted" style="font-size: 0.7rem;">@conn.SessionId?[..8]</code></td>
                                <td>
                                    @if (conn.ProxyType == "HoneyPot")
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-bullseye me-1"></i>Honeypot</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="bi bi-arrow-right me-1"></i>Forward</span>
                                    }
                                </td>
                                <td>
                                    <div class="position-relative">
                                    <code class="text-primary">@conn.RemoteAddress</code>
                                    @if (_selectedIP == conn.RemoteAddress && _selectedRowId == conn.Id)
                                    {
                                        <div class="ip-details-popover @popoverDirection card shadow border" @onclick:stopPropagation="true">
                                            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                                                <span class="fw-semibold small">
                                                    <i class="bi bi-info-circle me-1"></i>@conn.RemoteAddress
                                                    <a href="https://www.abuseipdb.com/check/@conn.RemoteAddress" target="_blank" rel="noopener noreferrer" class="ms-1 text-decoration-none" title="View on AbuseIPDB">
                                                        <i class="bi bi-box-arrow-up-right"></i>
                                                    </a>
                                                </span>
                                                <button class="btn btn-sm btn-close" @onclick="CloseIPDetails" @onclick:stopPropagation="true"></button>
                                            </div>
                                            <div class="card-body">
                                                @if (_isLoadingIPDetails)
                                                {
                                                    <div class="text-center py-1">
                                                        <span class="spinner-border spinner-border-sm text-primary"></span>
                                                    </div>
                                                }
                                                else if (_selectedIPDetails != null)
                                                {
                                                    <table class="table table-sm table-borderless mb-0" style="font-size: 0.75rem;">
                                                        <tbody>
                                                            <tr>
                                                                <td class="text-muted fw-semibold">Hits</td>
                                                                <td class="fw-bold">@_selectedIPDetails.Hits.ToString("N0")</td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-muted fw-semibold">Last Seen</td>
                                                                <td>@(_selectedIPDetails.LastConnectionTime?.ToString("MMM dd, yyyy HH:mm") ?? "‚Äî")</td>
                                                            </tr>
                                                            <tr>
                                                                <td class="text-muted fw-semibold">Blacklisted</td>
                                                                <td>
                                                                    @if (_selectedIPDetails.IsBlacklisted)
                                                                    {
                                                                        <span class="badge bg-danger">Yes</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-success">No</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                            @if (_selectedIPDetails.HasAbuseData)
                                                            {
                                                                <tr><td colspan="2"><hr class="my-1" /></td></tr>
                                                                <tr>
                                                                    <td class="text-muted fw-semibold">Abuse Score</td>
                                                                    <td><span class="badge @GetAbuseConfidenceBadgeClass(_selectedIPDetails.AbuseConfidence!.Value)">@(_selectedIPDetails.AbuseConfidence)%</span></td>
                                                                </tr>
                                                                @if (!string.IsNullOrEmpty(_selectedIPDetails.CountryName))
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted fw-semibold">Country</td>
                                                                        <td>@_selectedIPDetails.CountryName</td>
                                                                    </tr>
                                                                }
                                                                @if (!string.IsNullOrEmpty(_selectedIPDetails.ISP))
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted fw-semibold">ISP</td>
                                                                        <td>@_selectedIPDetails.ISP</td>
                                                                    </tr>
                                                                }
                                                                @if (!string.IsNullOrEmpty(_selectedIPDetails.Domain))
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted fw-semibold">Domain</td>
                                                                        <td><a href="https://@_selectedIPDetails.Domain" target="_blank" rel="noopener noreferrer">@_selectedIPDetails.Domain</a></td>
                                                                    </tr>
                                                                }
                                                                @if (!string.IsNullOrEmpty(_selectedIPDetails.UsageType))
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted fw-semibold">Usage</td>
                                                                        <td>@_selectedIPDetails.UsageType</td>
                                                                    </tr>
                                                                }
                                                                <tr>
                                                                    <td class="text-muted fw-semibold">Reports</td>
                                                                    <td>@(_selectedIPDetails.TotalReports?.ToString("N0") ?? "0") from @(_selectedIPDetails.DistinctUserCount?.ToString("N0") ?? "0") users</td>
                                                                </tr>
                                                                @if (_selectedIPDetails.LastReportedAt != null)
                                                                {
                                                                    <tr>
                                                                        <td class="text-muted fw-semibold">Last Report</td>
                                                                        <td>@_selectedIPDetails.LastReportedAt.Value.ToString("MMM dd, yyyy")</td>
                                                                    </tr>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <tr><td colspan="2" class="text-muted fst-italic">No AbuseIPDB data</td></tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    }
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (_pagedConnections.BlacklistedIPs.Contains(conn.RemoteAddress))
                                    {
                                        <span role="button" class="badge bg-danger-subtle text-danger border border-danger-subtle cursor-pointer" 
                                              title="Blacklisted" @onclick="() => ShowIPDetailsAsync(conn.RemoteAddress, conn.Id)" @onclick:stopPropagation="true">üè¥‚Äç‚ò†Ô∏è Blocked</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (_pagedConnections.CountryCodeMap.TryGetValue(conn.RemoteAddress, out var countryCode))
                                    {
                                        <span role="button" class="badge bg-light text-muted border cursor-pointer" title="@countryCode"
                                              @onclick="() => ShowIPDetailsAsync(conn.RemoteAddress, conn.Id)" @onclick:stopPropagation="true">
                                            <img src="https://flagcdn.com/w20/@(countryCode.ToLowerInvariant()).png" 
                                                 width="14" height="10" alt="@countryCode" loading="lazy" />
                                            @countryCode
                                        </span>
                                    }
                                </td>
                                <td><code>@conn.RemotePort</code></td>
                                <td class="text-center text-muted"><i class="bi bi-arrow-right"></i></td>
                                <td><code>@conn.LocalAddress</code></td>
                                <td><code>@conn.LocalPort</code></td>
                            </tr>
                            @if (isExpanded)
                            {
                                var sessionData = _expandedSessions[conn.SessionId];
                                <tr>
                                    <td colspan="11" class="bg-light p-0">
                                        <div class="p-2">
                                            @if (sessionData?.Any() == true)
                                            {
                                                @foreach (var data in sessionData)
                                                {
                                                    <div class="connection-data-record mb-2">
                                                        <div class="d-flex align-items-center mb-1">
                                                            @if (data.CommunicationDirection == "Incoming")
                                                            {
                                                                <span class="badge bg-info me-2"><i class="bi bi-arrow-down-left me-1"></i>Incoming</span>
                                                                <small class="text-muted">Remote ‚Üí Local</small>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-success me-2"><i class="bi bi-arrow-up-right me-1"></i>Outgoing</span>
                                                                <small class="text-muted">Local ‚Üí Remote</small>
                                                            }
                                                        </div>
                                                        <pre class="bg-dark text-light p-2 rounded mb-0" style="max-height: 120px; overflow: auto; font-size: 0.75rem;">@data.Data</pre>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
